@{
}

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="card text-black">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Create a new account</p>

                                <form class="mx-1 mx-md-4" asp-controller="Account" asp-action="Register" method="post" role="form">

                                    <div class="align-items-center mb-4">
                                    <label asp-for="Email" class="col-md-2 w-100" style="font-size:20px">Email</label>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" asp-for="Email" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                    </div>

                                    <div class="align-items-center mb-4">
                                    <label asp-for="UserName" class="col-md-2 w-100" style="font-size:20px">Your Name</label>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="UserName" class="form-control" />
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                    </div>

                                    <div class="align-items-center mb-4">
                                    <label asp-for="Password" class="col-md-2 w-100" style="font-size:20px">Password</label>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" asp-for="Password" class="form-control" />
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    <div class="align-items-center mb-4">
                                    <label asp-for="ConfirmPassword" class="col-md-2 w-100" style="font-size:20px">Repeat your Password</label>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" />
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                    <label asp-for="RoleSelected" class="col-md-2 w-100" style="font-size:20px">Select Role</label>
                                        <div class="col-md-10">
                                            <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                                                <option disabled selected>--Select Role--</option>
                                            </select>
                                        </div>
                                    </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4" style="padding: 10px">
                                        <div class="offset-md-2 col-md-10">
                                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                        </div>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</section>